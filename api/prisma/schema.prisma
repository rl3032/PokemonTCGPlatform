generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  auth0Id      String   @unique
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Card {
  id        String   @id
  name      String
  hp        String?
  types     String
  imageUrl  String?
  lowPrice  Float?   // Corresponds to Price.low
  midPrice  Float?   // Corresponds to Price.mid
  highPrice Float?   // Corresponds to Price.high
  marketPrice Float? // Corresponds to Price.market
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}